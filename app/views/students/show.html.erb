<h3>Mod: <%= @student.mod %></h3>
<h4>My Ducks:</h4>
<ol>
<% @student.ducks.each do |duck| %>
   <li> <%= link_to duck.name.capitalize, duck_path(duck) %> </li>
<% end %>
</ol>

