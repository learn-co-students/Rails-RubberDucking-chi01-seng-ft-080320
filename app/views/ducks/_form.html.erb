<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color:red"><%= error %></p>
  <% end %>
<% end %>


<%= form_for @duck do |f| %>

<%= f.label :name, "Enter duck name:" %>
<%= f.text_field :name %>
</br></br>
<%= f.label :description, "Enter duck description:" %>
<%= f.text_area :description %>
</br></br>
<%= f.label :student_id, "Choose a student for this duck:" %>
<%= f.collection_select(:student_id, @students, :id, :name) %>
</br></br>
<%= f.submit value = "Submit new duck info" %>
  
<% end %>


